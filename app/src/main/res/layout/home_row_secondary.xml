<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"

                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/img_chef_profile_home_row_sec" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_name_home_row_sec" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/img_chef_profile_home_row_sec" android:textStyle="bold"
            android:textSize="18sp" android:textColor="@color/DarkGrey"/>
    <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_address_with_flat_no_home_row_sec"
            app:layout_constraintTop_toBottomOf="@+id/tv_chef_name_home_row_sec" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/img_chef_profile_home_row_sec" android:textStyle="bold"
            android:textSize="16sp" android:textColor="@color/SkyBlue"/>
    <TextView
            android:text="@string/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView62" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_chef_address_with_flat_no_home_row_sec"
            android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/img_chef_profile_home_row_sec"
            android:textSize="16sp" android:textColor="@color/DarkGrey" android:textStyle="bold"/>
    <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_about_chef_home_row_sec"
            app:layout_constraintTop_toBottomOf="@+id/textView62" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/img_chef_profile_home_row_sec" android:textSize="16sp"
            android:maxLines="3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_about_chef_home_row_sec"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:weightSum="3">

        <TextView
                android:text="@string/veg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" android:textStyle="bold" android:textColor="@color/Black"
                android:textSize="16sp" android:id="@+id/tv_dish_type_veg_home_row_sec"/>
        <TextView
                android:text="@string/non_veg"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_dish_type_nonveg_home_row_sec"
                android:layout_weight="1"
                android:gravity="center" android:textStyle="bold" android:textColor="@color/Black"
                android:textSize="16sp"/>
        <TextView
                android:text="@string/active_dishes"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_active_dishes_home_row_sec"
                android:layout_weight="1"
                android:gravity="center" android:textSize="16sp" android:textStyle="bold"
                android:textColor="@color/SkyBlue"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
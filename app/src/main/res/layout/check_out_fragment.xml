<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent" android:id="@+id/nestedScrollView3">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/SoumenRequestDish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="This is Request Dish Fragment" />

        <TextView
          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_buyer_name_checkout"
            android:textColor="@color/DarkGrey"
            android:textStyle="bold" android:textSize="16sp"
            android:ellipsize="middle" android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView29" android:layout_marginTop="4dp"/>
        <TextView
          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_buyer_address_with_flat_number_checkout"
            android:textColor="@color/DarkGrey"
            android:textStyle="bold" android:textSize="16sp" android:ellipsize="middle"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="@+id/tv_buyer_name_checkout"
            app:layout_constraintStart_toEndOf="@+id/tv_buyer_name_checkout" android:layout_marginStart="4dp"/>


        <TextView
         
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_buyer_phone_number_checkout"
            android:textStyle="bold"
            android:ellipsize="middle"
            android:textSize="16sp" android:singleLine="true"
            app:layout_constraintTop_toTopOf="@+id/tv_buyer_address_with_flat_number_checkout"
            app:layout_constraintStart_toEndOf="@+id/tv_buyer_address_with_flat_number_checkout"
            android:layout_marginStart="4dp" android:textColor="@color/DarkGrey"/>


        <TextView
            android:text="@string/item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@color/LightGrey"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_buyer_name_checkout" android:layout_marginTop="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView_checkout"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp" android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"/>
        <TextView
            android:text="@string/add_more_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@color/LightGrey"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:id="@+id/tv_add_more_items_checkout"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_checkout"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:text="@string/bill_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@color/LightGrey"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_add_more_items_checkout"/>


        <TextView
            android:id="@+id/textView33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/LightGrey"
            android:padding="4dp"
            android:text="@string/select_payment_mode"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.019"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cart_total_text" />

        <TextView
            android:id="@+id/tv_itemtotal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/item_total"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />
        <TextView
            android:text="@string/digital_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView28" android:textSize="16sp"
            android:textStyle="bold" android:textColor="@color/Black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:background="@color/LightGrey" android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_cash_checkout" android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_place_order_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/DarkBlue"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/proceed"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/linearLayout8" android:padding="4dp">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/gpay"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/tv_payment_gpay_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/g_pay"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
            android:id="@+id/linearLayout9" android:padding="4dp">
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/paytm"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/tv_payment_paytm_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/paytm"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/linearLayout10" android:padding="4dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/tv_place_order_checkout">
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/phonepe"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/tv_payment_phonepe_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/phone_pe"
                android:textColor="@color/DarkGrey"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <CheckBox
            android:text="@string/cash_on_delivery_keeping_exact_change_is_appricieated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_payment_cash_checkout" android:checked="true"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView33"
            android:background="@color/LightGrey" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:buttonTint="@color/Orange"/>
        <TextView
            android:text="@string/delivery_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView29" android:textSize="18sp"
            android:textColor="@color/Black" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/LightGrey"
            android:textStyle="bold" android:padding="4dp"/>
        <TextView
            android:text="@string/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_edit_checkout"
            app:layout_constraintTop_toTopOf="@+id/tv_buyer_phone_number_checkout"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/SkyBlue" android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_item_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/tv_total_delivery_charges_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/total_delivery_charges"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_itemtotal_text" />

        <TextView
            android:id="@+id/tv_total_delivery_charges_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_total_value" />

        <TextView
            android:id="@+id/tv_totalpacking_charges_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/total_packing_charges"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_delivery_charges_text" />

        <TextView
            android:id="@+id/tv_totalpacking_charges_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_delivery_charges_value" />

        <TextView
            android:id="@+id/tv_cart_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/total_amount"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_totalpacking_charges_text" />

        <TextView
            android:id="@+id/tv_cart_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"

            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_totalpacking_charges_value" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
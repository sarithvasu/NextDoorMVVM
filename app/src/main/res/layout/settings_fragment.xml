<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".buyer.ui.home.settings.SettingsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tv_current_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:drawableStart="@drawable/ic_today"
            android:drawablePadding="8dp"
            android:gravity="clip_vertical"
            android:paddingStart="10dp"
            android:paddingTop="20dp"

            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="@string/current_order"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
     >

        <TextView
            android:id="@+id/tv_order_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:drawableStart="@drawable/ic_calendar_week"
            android:drawablePadding="8dp"
            android:gravity="clip_vertical"
            android:paddingStart="10dp"
            android:paddingTop="20dp"

            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="@string/order_history"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    >

    <TextView
        android:id="@+id/tv_invite_neighbor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:drawableStart="@drawable/ic_share"
        android:drawablePadding="8dp"
        android:gravity="clip_vertical"
        android:paddingStart="10dp"
        android:paddingTop="20dp"

        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:text="@string/invite_neighbor"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold" />
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="8dp"
            android:gravity="clip_vertical"
            android:paddingStart="10dp"
            android:paddingTop="20dp"

            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="@string/edit_profile"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:drawableStart="@drawable/ic_contact_mail"
            android:drawablePadding="8dp"
            android:gravity="clip_vertical"
            android:paddingStart="10dp"
            android:paddingTop="20dp"

            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="@string/contact_us"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        >

        <TextView
            android:id="@+id/tv_about_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:drawableStart="@drawable/ic_group"
            android:drawablePadding="8dp"
            android:gravity="clip_vertical"
            android:paddingStart="10dp"
            android:paddingTop="20dp"

            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:text="@string/about_us"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</LinearLayout>